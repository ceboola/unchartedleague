<div id="new_comment" style="margin-top: 20px;">
  <% if send(Opinio.current_user_method) %>
    <label for="comment_area"><h3><%= t 'opinio.add_comment' %></h3></label>
    <%= form_for Comment.new do |f| %>
      <p>        
        <%= f.text_area :body, :id => "comment_area" %>
      </p>
      <%= hidden_field_tag :commentable_id, commentable.id %>
      <%= hidden_field_tag :commentable_type, commentable.class.base_class.name.to_s %>
      <%= f.submit t('opinio.add_comment') %>
    <% end %>
  <% else %>
    <p>
      <%= t 'opinio.must_be_logged_in_to_comment' %>
    </p>
  <% end %>
</div>
