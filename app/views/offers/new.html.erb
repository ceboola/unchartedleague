<h1><%= t('offers.new') %></h1>
<% if @offer.errors.any? %>
  <div class="flash error">
    <h2><%= pluralize_localized(@offer.errors.count, t('error')) %> <%= t('in_your_form') %></h2>
    <p><%= t('problems_detected') %>:</p>
    <ul class="fancy">
    <% @offer.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div id="stylized-form">
  <%= form_tag :action => 'create' do %>
    <%= hidden_field_tag 'originated_from_player', @offer.originated_from_player %>
    <%= hidden_field_tag 'team_id', @offer.team_id %>
    <%= hidden_field_tag 'user_id', @offer.user_id %>
    <div class="wrapper-block">
      <label><%= t('activerecord.attributes.offer.from') %>:<span class="small-label">Nadawca oferty</span></label>
      <%= text_field :offer, :from, { :disabled => "true", :size => "50" } %>
    </div>    
    <div class="wrapper-block">
      <label><%= t('activerecord.attributes.offer.to') %>:<span class="small-label">Adresat oferty</span></label>
      <%= text_field :offer, :to, { :disabled => "true", :size => "50" } %>
    </div> 
    <div class="wrapper-block">
      <label><%= t('activerecord.attributes.offer.subject') %>:<span class="small-label">Cel oferty</span></label>
      <%= text_field :offer, :subject, { :disabled => "true", :size => "70" } %>
    </div> 
    <div class="wrapper-block">
      <label for="comments"><%= t('activerecord.attributes.offer.content') %>:<span class="small-label">Treść oferty</span></label>
      <%= text_area_tag(:content, nil, :size => "80x5", :maxlength => "350") %>
    </div>    
    <input type="submit" value="<%= t('offers.send') %>" class="submit btn-form" />
  <% end %>
</div>
