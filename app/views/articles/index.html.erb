<h1><%= t('articles.page_title') %></h1>
<section id="article_list">
  <ul>
    <% for article in @articles do %>
      <li id="article<%= article.id %>">
        <p>
          <em>
             <%= link_to article.title, article %> 
             <span class="dates"><%= time_tag article.created_at %></span>             
             <% unless article.published? %>
              <span style="color: red;"><%= t("articles.unpublished") %></span>
             <% end %>
             <% if can? :manage, article %>
              <span class="fancy admin_panel"><%= link_to t('articles.edit_article'), edit_article_path(article) %></span>
             <% end %>
          </em>
          <%= article.content_preview %>
        </p>
      </li>
    <% end %>
  </ul>
</section>
