<h2>Zmień swoje hasło</h2>

<% if @user.errors.any? %>
  <div class="flash error">
    <h2><%= pluralize_localized(@user.errors.count, t('error')) %> <%= t('in_your_form') %></h2>
    <p><%= t('problems_detected') %>:</p>
    <ul class="fancy">
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= f.hidden_field :reset_password_token %>

  <div><%= f.label :password, "Nowe hasło" %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation, "Potwierdź nowe hasło" %><br />
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.submit "Zmień moje hasło" %></div>
<% end %>

<%= render :partial => "devise/shared/links" %>