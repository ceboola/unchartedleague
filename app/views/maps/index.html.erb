<h1>Listing maps</h1>

<table id="minimalist-table-hor-a">
<% @maps.each do |map| %>
  <tr>
    <td><%= link_to map.name, map %></td>
    <td><%= link_to 'Edit', edit_map_path(map) %></td>
    <td><%= link_to 'Destroy', map, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

